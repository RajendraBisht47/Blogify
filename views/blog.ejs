<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="conatiner m-4">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="" height="50px" style="border-radius: 50%;" >
        <spam><%= blog.createdBy.fullName %></spam>
    </div>

    <div class="conatiner m-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="">
        <pre><%= blog.body %></pre>
    </div>

    <div class="container m-3" >
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">

                <div class="mb-3">
                  
                  <input type="text"
                  name="content"  
                  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                  
                </div>
                <button type="submit" class="btn btn-primary">add</button>
              </form>
              
        <% } %>
        <div class="container m-3">
            <% comments.forEach(comment => { %>
             
                <div>
                    <img src="<%= comment.createdBy.profileImageURL %>" alt="" style="border-radius: 50%;" height="50px">
                    <spam><%= comment.createdBy.fullName %></spam>
    <pre><%= comment.content %></pre>
                </div>

            <% }) %>
          </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>